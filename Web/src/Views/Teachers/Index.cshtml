@model IEnumerable<UnivWebApp.Models.Teacher>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCI.cshtml";
}

<h1>List of Teachers</h1>

<p>
    <a asp-action="Create">New Teacher</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTeacher">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTeacher">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTeacher">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
